        <script>
            $(document).ready(function () {
                $("#demoForm").validate({
                    onfocusout: false,
                    onkeyup: false,
                    onclick: false,
                    rules: {
                        "password": {
                            required: true,
                        },
                        "passwordNews": {
                            required: true,
                            minlength: 5
                        },
                        "passwordNewsRepeat": {
                            required: true,
                            equalTo: "#passwordNews",
                        }
                    },
                    messages: {
                        "password": {
                            required: "Bắt buộc nhập password cũ"
                        },
                        "passwordNews": {
                            required: "Bắt buộc nhập Password mới",
                            minlength: "Tên bài viết tối thiểu 5 ký tự"
                        },
                        "passwordNewsRepeat": {
                            required: "Bắt buộc nhập Password ",
                            equalTo: "Mật khẩu nhập lại khác với mật khẩu"
                        }
                    }
                });
                var token = window.localStorage.getItem('user');
                console.log(token);
                $("#username").html(token);
                $("#logout").click(function (e) {
                    e.preventDefault();
                    $.ajax({
                        type: "POST",
                        url: "/user/logout",
                        data: "data",
                        success: function (response) {
                            window.localStorage.clear();
                            window.location.replace("http://localhost:8081/admin")
                        }
                    });
                });
                $(".save").click(function (e) {
                    $(".alert").html(``);
                    e.preventDefault();
                    if ($("#demoForm").valid()) {
                        var password = $("#password").val();
                        var passwordNews = $("#passwordNews").val();
                        $.ajax({
                            type: "PUT",
                            url: "/admin/user/update/" + token,
                            data: {
                                password: password,
                                passwordNews: passwordNews
                            },
                            success: function (response) {
                                if(response.username == token){
                                    $("#password").val("");
                                    $("#passwordNews").val("");
                                    $("#passwordNewsRepeat").val("");
                                        $(".alert").html(`
                                        <div class="alert alert-success" role="alert">
                                           Update password success!
                                        </div>
                                        `);
                                }
                            },statusCode: {
                                404: function () {
                                    // Only if your server returns a 403 status code can it come in this block. :-)
                                    $(".alert").html(`
                                        <div class="alert alert-danger" role="alert">
                                          Old password is't correct! Check password 
                                        </div>
                                        `);
                                },
                                500: function () {
                                    // Only if your server returns a 403 status code can it come in this block. :-)
                                    $(".alert").html(`
                                    <div class="alert alert-danger" role="alert">
                                        Server down! Try again later
                                    </div>
                                    `);
                                }
                            }
                        });
                    }
                });

                $(".clear").click(function (e) { 
                    e.preventDefault();
                    $(".alert").html(``);
                    $("#password").val("");
                    $("#passwordNews").val("");
                    $("#passwordNewsRepeat").val("");
                });
            });
        </script>
