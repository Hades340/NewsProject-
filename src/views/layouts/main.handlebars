        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/src/views/public/js/scripts.js"></script>
        <script>
            $(document).ready(function () {
                var tokenUser = window.localStorage.getItem('userUser');
                console.log(tokenUser);
                if (tokenUser != null) {
                    $("#navbarDropdownBlog").html("");
                    $("#navbarDropdownBlog").html(tokenUser);
                }
                else {
                    $("#navbarDropdownBlog").html("");
                    $("#navbarDropdownBlog").html("User");
                }

                $("#logout").click(function (e) {
                    e.preventDefault();
                    $.ajax({
                        type: "POST",
                        url: "/nguoidung/logout",
                        data: "data",
                        success: function (response) {
                            if (response.message == "NotLogin") {
                                alert("You not login");
                            }
                            else {
                                window.localStorage.removeItem("userUser");
                                $("#navbarDropdownBlog").html("");
                                $("#navbarDropdownBlog").html("User");
                            }

                        }
                    });
                });

                $("#typeNews").load("/loaitintuc/findall", "", function (response, status, request) {
                    this; // dom element
                    var jsonData = JSON.parse(response);
                    console.log(jsonData);
                    var item = ``;
                    for (let i = 0; i < jsonData.length; i++) {
                        console.log(jsonData[i]);
                        item += `<li><a class="dropdown-item menuNews" href="/admin/loaitintuc/` + jsonData[i].id + `">` + jsonData[i].loaibaiviet + `</a></li>`;
                    }
                    $(this).html(item);
                });
            });

        </script>
    </body>

